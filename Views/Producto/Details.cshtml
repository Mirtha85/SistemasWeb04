@model Producto

<section class="container secciondetails" style="margin-top: 80px; margin-bottom: 55px">
    <div class="row gx-5">
        <div class="col-12 col-md-5">
            <div class="card">
                <img alt="@Model.NombreProducto" src="~/imagenes/@Model.ImagenProducto" class="card-img-top small-image mx-auto" />
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="d-flex flex-column h-100">
                <h4>@Model.NombreProducto</h4>
                <p>@Model.DescripcionProducto</p>
                <h3 class="text-md-right">@Model.PrecioProducto.ToString("c")</h3>
                <div class="mt-auto">
                    <p class="button">
                        <a class="btn btn-secondary btn-block" style="background-color: rebeccapurple;" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                           asp-route-ProductoId="@Model.ProductoId">Agregar a Carrito</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .small-image {
        width: 100%;
        height: 90%;
        max-width: 400px; /* Ajusta el tamaño máximo de la imagen según tus necesidades */
    }

</style>









